{{#extends 'base'}}

{{#block 'title'}}
Add Film
{{/block}}

{{#block 'content'}}
<h1>Add Film</h1>
<form method="POST">
    <div>
        <label class="form-label">Title</label>
        <input type="text" name="title" class="form-control"/>
    </div>
    <div>
        <label class="form-label">Description</label>
        <textarea class="form-control" name="description"></textarea>
    </div>
    <div>
        <label class="form-label">Actor</label>
        <select name="actor_id" multiple>
            {{#each actors}}
            <option value="{{this.actor_id}}">{{this.first_name}} {{this.last_name}}</option>
            {{/each}}
        </select>
    </div>
    <div>
        <label class="form-label">Release Year</label>
        <input type="text" name="release_year" class="form-control"/>
    </div>
    <div>
        <label class="form-label">Language</label>
        <select name="language_id" class="form-control">
        {{#each languages}}
            <option value="{{this.language_id}}">{{this.name}}</option>
        {{/each}}
        </select>
    </div>
    <div>
        <label class="form-label">Rental Duration</label>
        <input type="text" name="rental_duration" class="form-control"/>
    </div>
    <div>
        <label class="form-label">Replacement Cost</label>
        <input type="text" name="replacement_cost" class="form-control"/>
    </div>
    <input type="submit" value="Add New Film" class="btn btn-primary mt-3"/>
</form>
{{/block}}

{{/extends}}