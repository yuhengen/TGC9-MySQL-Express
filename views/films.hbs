{{#extends 'base'}}

{{#block 'title'}}
Films
{{/block}}

{{#block 'content'}}
<h1>Films</h1>

<table class="table">
    <thead>
        <tr>
            <th>Movie Name</th>
            <th>Year</th>
        </tr>
    </thead>
    {{#each films}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.release_year}}</td>
            <td><a href="/films/{{this.film_id}}/update" class="btn btn-success">UPDATE</a></td>
        </tr>
    {{/each}}
</ul>
</table>
{{/block}}

{{/extends}}