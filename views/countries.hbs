{{#extends 'base'}}

{{#block 'title'}}Countries{{/block}}

{{#block 'content'}}
<h1>Countries</h1>
<a href="/countries/create" class="btn btn-primary">Add Country</a>
<table class='table'>
    <thead>
        <tr>
            <th>Country ID</th>
            <th>Country</th>
            <th>Last Updated</th>
        </tr>
    </thead>
        {{#each countries}}
        <tr>
            <td>{{this.country_id}}</td>
            <td>{{this.country}}</td>
            <td>{{this.last_update}}</td>
            <td><a href="/countries/{{this.country_id}}/update" class="btn btn-primary">Edit</a></td>
            <td><a href="/countries/{{this.country_id}}/delete" class="btn btn-danger">Delete</a></td>
        </tr>
        {{/each}}
</table>
{{/block}}

{{/extends}}