{{#extends 'base'}}

{{#block 'title'}}
Delete Country
{{/block}}

{{#block 'content'}}
<h1>Delete Country</h1>
<div class="mb-3" style="color:red; font-weight: bold;">
Are you sure you want to delete this country?
</div>
<form method="POST">
<div>
    <label class="form-label">Country Name</label>
    <input type="text" name="country" class="form-control" value="{{country.country}}"/>
</div>
<input type="submit" value="Delete" class="btn btn-danger mt-3"/>
<a href="/countries" class="btn btn-primary mt-3">No</a>
</form>
{{/block}}

{{/extends}}